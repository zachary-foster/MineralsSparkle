<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  
  <RecipeDef>
    <defName>MakeCutGems_Hand</defName>
    <label>Cut gems by hand</label>
    <description>Create cut gems from rough gems by hand. Very slow and difficult.</description>
    <jobString>Cutting gems.</jobString>
    <workAmount>3000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RoughGem</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RoughGem</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>RoughGem</li>
      </thingDefs>
    </defaultIngredientFilter>
    <products>
      <CutGem>1</CutGem>
    </products>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <!-- <researchPrerequisite>ZF_HardStoneCuttingI</researchPrerequisite> -->
  </RecipeDef>
  
  
