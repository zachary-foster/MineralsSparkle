<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  
  <ThingDef Name="MS_GemBase" ParentName="ResourceBase" Abstract="True">
    <altitudeLayer>ItemImportant</altitudeLayer>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <DeteriorationRate>0</DeteriorationRate>
      <Flammability>0</Flammability>
    </statBases>
    <smallVolume>false</smallVolume>
    <thingCategories>
      <li>MS_Gemstones</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef ParentName="MS_GemBase">
    <defName>RoughGem</defName>
    <label>Rough Gem</label>
    <description>Uncut precious crystal. Can be found when mining.</description>
    <graphicData>
      <texPath>Things/Item/Resource/RoughGem</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>50</MarketValue>
      <Mass>0.2</Mass>
      <Beauty>2</Beauty>
    </statBases>
    <stackLimit>50</stackLimit>
  </ThingDef>
  
  
  <ThingDef ParentName="MS_GemBase">
    <defName>CutGem</defName>
    <label>Cut Gem</label>
    <description>A cut gem. Generally used to decorate rich people and impress aspiring raiders.</description>
    <graphicData>
      <texPath>Things/Item/Resource/CutGem</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>200</MarketValue>
      <Mass>0.05</Mass>
      <Beauty>10</Beauty>
    </statBases>
    <stackLimit>100</stackLimit>
  </ThingDef>
  
  
  <ThingDef ParentName="MS_GemBase">
    <defName>RoughUltrahardGem</defName>
    <label>Rough Ultrahard Gem</label>
    <description>An uncut precious crystal. This type is very hard and valuable. Can be found when mining some rare minerals.</description>
    <graphicData>
      <texPath>Things/Item/Resource/RoughGem</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>200</MarketValue>
      <Mass>0.2</Mass>
      <Beauty>3</Beauty>
    </statBases>
    <stackLimit>50</stackLimit>
  </ThingDef>
  

  <ThingDef ParentName="MS_GemBase">
    <defName>CutUltrahardGem</defName>
    <label>Cut Ultrahard Gem</label>
    <description>A cut ultrahard gem. Useful for many high-tech applications and very valuable.</description>
    <graphicData>
      <texPath>Things/Item/Resource/CutGem</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
      <Mass>0.05</Mass>
      <Beauty>20</Beauty>
    </statBases>
    <stackLimit>100</stackLimit>
  </ThingDef>
  
</Defs>
