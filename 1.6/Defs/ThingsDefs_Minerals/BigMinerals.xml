<?xml version="1.0" encoding="UTF-8"?>
<Defs>


  <ThingDef Name="MS_BigQuartzCrystal" ParentName="MF_BigQuartzBase" Class="MineralsFramework.ThingDef_StaticMineral">
    <defName>MS_BigQuartzCrystal</defName>
    <label>Giant Quartz Crystal</label>
    <description>An huge deposit of Quartz.</description>
    <statBases>
      <Beauty>50</Beauty>
    </statBases>
    <randomColorsOne>
      <li>(230,230,230)</li>
      <li>(235,235,235)</li>
      <li>(240,240,240)</li>
      <li>(245,245,245)</li>
      <li>(250,250,250)</li>
    </randomColorsOne>
    <randomColorsTwo>
      <li>(230,230,230)</li>
      <li>(235,235,235)</li>
      <li>(240,240,240)</li>
      <li>(245,245,245)</li>
      <li>(250,250,250)</li>
    </randomColorsTwo>
    <!-- Other resources it might drop -->
    <randomlyDropResources>
      <li>
        <ResourceDefName>MS_BigQuartzCrystalSpecimen</ResourceDefName>
        <DropProbability>0.5</DropProbability>
        <CountPerDrop>1</CountPerDrop>
        <MinMiningSkill>7</MinMiningSkill>
        <Minified>true</Minified>
      </li>
      <li>
        <ResourceDefName>MS_RoughGem</ResourceDefName>
        <DropProbability>5</DropProbability>
        <CountPerDrop>1</CountPerDrop>
        <MinMiningSkill>3</MinMiningSkill>
      </li>
    </randomlyDropResources>
    <!-- Things this mineral replaces when a map is initialized -->
    <ThingsToReplace>
      <li>QuartzCrystal</li>
    </ThingsToReplace>
    <!-- Minimum distance from the nearest settlement the inital spawn needs to be in order to be spawned at the maximum probablity -->
    <otherSettlementMiningRadius>10</otherSettlementMiningRadius>
  </ThingDef>


  <ThingDef Name="MS_BigQuartzCrystalSpecimen" ParentName="MF_MineralSpecimenBase" Class="MineralsFramework.ThingDef_MineralSpecimen">
    <defName>MS_BigQuartzCrystalSpecimen</defName>
    <label>Giant Quartz Crystal Specimen</label>
    <description>An huge crystal of Quartz that has been skillfully detached in one peice. It is very beautiful and might be valuable to the right trader.</description>
    <graphicData>
      <texPath>Things/Mineral/BigQuartzCrystal</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <damageData>
        <enabled>false</enabled>
      </damageData>
      <drawSize>(1.3,1.3)</drawSize>
      <color>(240,240,240)</color>
      <colorTwo>(240,240,240)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>600</WorkToBuild>
      <Mass>30</Mass>
      <Beauty>40</Beauty>
      <MarketValue>800</MarketValue>
    </statBases>
    <costList>
      <RoughGem>6</RoughGem>
    </costList>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.02</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>


